proxy_cache_path /cache/hirez keys_zone=hirez:256m levels=1:2:2 inactive=365d use_temp_path=off;

server {
	listen 80;
	server_name
		hirez.http.internapcdn.net
		.hwcdn.net;

	access_log /var/log/nginx/hirez-access.log;
	error_log /var/log/nginx/hirez-error.log error;

	location / {
		proxy_cache hirez;
		proxy_cache_key "hirez $uri$slice_range"; # $is_args$args
		proxy_pass http://$host;
		proxy_cache_use_stale error timeout http_500 http_502 http_503 http_504;
		proxy_cache_background_update on;
		proxy_cache_lock on;
	}
}
